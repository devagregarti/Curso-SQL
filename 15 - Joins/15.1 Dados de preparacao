-- Tabela de clientes
CREATE TABLE clientes (
    id SERIAL PRIMARY KEY,
    nome TEXT
);

-- Tabela de pedidos
CREATE TABLE pedidos (
    id SERIAL PRIMARY KEY,
    cliente_id INT,
    produto TEXT,
    FOREIGN KEY (cliente_id) REFERENCES clientes(id)
);

-- Dados de exemplo
